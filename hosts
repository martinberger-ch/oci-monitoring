# - For OL8 ESXi / OL8 VMware ---------------------------------------------
# - set IP and OS root password
# -------------------------------------------------------------------------

#[monitoring]
#<your_monitoring_host_IP_here> ansible_user=root ansible_ssh_pass=<your_root_password_here> ansible_python_interpreter="/usr/bin/env python3"

# - For Oracle Cloud Infrastructure ---------------------------------------
# - set path to opc SSH key for instance connect
# - set instance IP address
# -------------------------------------------------------------------------

#[all:vars]
#ansible_ssh_private_key_file=/home/opc/.ssh/ssh-key-2021-09-22.key
#[monitoring]
#<your_private_IP_here> ansible_user=opc ansible_python_interpreter="/usr/bin/env python3"